<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="500" d:DesignHeight="600"
        xmlns:vm="using:CafeAvalonia.ViewModels"
        x:Class="CafeAvalonia.Views.EmployeeDetailsWindow"
        x:DataType="vm:EmployeeDetailsViewModel"
        Title="Подробности сотрудника" Width="500" Height="600">

	<ScrollViewer>
		<StackPanel Margin="20" Spacing="20">
			<!-- Фото -->
			<Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="5">
				<Image Source="{Binding PhotoBitmap}"
                       Stretch="Uniform"
                       Width="200" Height="250"
                       HorizontalAlignment="Center"/>
			</Border>

			<!-- Данные сотрудника -->
			<StackPanel Spacing="10">
				<TextBlock Text="{Binding FullName}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
				<TextBlock Text="{Binding Speciality}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="Blue"/>
				<ComboBox ItemsSource="{Binding Statuses}"
					SelectedItem="{Binding Status}"
					PlaceholderText="Статус"/>

				<Separator Margin="10"/>

				<TextBlock Text="Скан договора:" FontWeight="SemiBold"/>
				<TextBlock Text="{Binding ScanContract}" TextWrapping="Wrap" FontFamily="Consolas"/>

				<Button Content="Закрыть" Command="{Binding CloseCommand}"
                        HorizontalAlignment="Right" Margin="0,20,0,0"/>
			</StackPanel>
		</StackPanel>
	</ScrollViewer>
</Window>
